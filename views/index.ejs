
    <%- include ('./partials/header') %>

    <div class="ui main text container">
        <div class="ui huge header">My Quarantine Blog</div>
        <div class="ui raised padded container segment">
            <div class="ui divided items">
                <% blogs.forEach(function(blog){ %>
                    <div class="item">
                        <div class="image">
                            <img src="<%= blog.image %>" >
                        </div>
                        <div class="content">
                             <a class="header" href="/blogs/<%= blog._id %>"><%=blog.title%></a>
                             <div class="meta">
                                 <span><%= blog.created.toDateString() %></span>
                             </div>
                             <div class="description">
                                 <p>
                                     <% if(blog.body !== undefined) {%>
                                        <%- blog.body.substring(0, 100) %>
                                     <% } %>
                                 </p>
                             </div>
                             <div class="extra">
                                 <a class="ui circular green button" href="/blogs/<%= blog._id %>">
                                     Read More
                                     <i class="small arrow circle right icon"></i>
                                 </a>
                             </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <%- include ('./partials/footer') %>


