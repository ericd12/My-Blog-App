<%- include ('./partials/header') %>

<div class="ui main raised text container segment">
	<div class="ui huge header"><%=blog.title%></div>
	<div class="ui top attached">
		<div class="item">
			<img class="ui centered image" src="<%= blog.image %>">
			<div id="date" class="content">
				<span><%= blog.created.toDateString() %></span>
			</div>
			<div class="description">
				<p><%- blog.body %></p>
			</div>
			<a class="ui circular green button" href="/blogs/<%=blog._id%>/edit">Edit</a>
			<form id="delete" action="/blogs/<%= blog._id%>?_method=DELETE" method="POST">
				<button class="ui circular green basic button">Delete</button>
			</form>
		</div>
	</div>
</div>
<%- include ('./partials/footer') %>
